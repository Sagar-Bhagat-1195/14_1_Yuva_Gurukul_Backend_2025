//- single-page.pug
doctype html
html
  head
    title #{title}
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    header.bg-primary.text-white.text-center.py-4
      h1 #{title}
      p Lead paragraph introducing the page content.
    
    //- Main content section
    main.container.my-5
      section#about.mb-5
        h2 About Us
        p This is an example of a simple single-page website made with Jade/Pug.
        
      section#services.mb-5
        h2 Our Services
        ul
          li Service 1
          li Service 2
          li Service 3

      section#contact
        h2 Contact Us
        p Email: sagarbhagat00@gmail.com
        p Phone: +8000101248

    //- Footer
    footer.bg-dark.text-white.text-center.py-4
      p &copy; 2024 Single Page Website. All Rights Reserved.
    
    //- JavaScript (Bootstrap)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
